<h3>Index Page</h3>
<% if @users.any? %>
    <% @users.each do |user| %>
        <p>
          <h4>Name: <%= user.name %></h4>
          <h4>Age: <%= user.age %></h4>
          <h4>Profile Picture</h4>  <%= image_tag user.profile_photo, width: 80 %>
          <h4>Photo Albums</h4>
          <% if user.albums.any? %>
            <% user.albums.each do |al| %>
                <%= image_tag al.thumb, width: 80 %>
            <% end %>
          <% end %>
        </p>
    <% end %>
<% end %>

<%= link_to "Add new user", new_user_path %>